@model IEnumerable<De07.Models.Entities.PhanLoai>
<div class="col-12">
    <div class="alazea-portfolio-filter">
        <div class="portfolio-filter">
            <button class="btn active items">All</button>
            @foreach (var item in Model)
            {
            <button class="btn item" id="@item.MaPhanLoai">
                @item.PhanLoaiChinh
            </button>
            }
          
        </div>
    </div>
</div>
<script>
    $(".item").click(function () {  
        var ma = $(this).attr("id");
        $.ajax({
            url:"RenderPlantByCatId",
            data:{ ma: ma },
            success: function (res) {
                $("div#content").html(res);
            }
        })
    })
</script>
